<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Listen.Theme.Widget.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/listen.theme.dark_blue.actionMode.background</item>
        <item name="height">?attr/actionBarSize</item>
        <item name="backgroundSplit">@null</item>
        <item name="titleTextStyle">@style/Listen.Theme.TextAppearance.ActionMode.Title</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="Listen.Theme.Widget.ActionMode.CloseButton" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:tint">@color/listen.theme.dark_blue.colorPrimary</item>
    </style>

    <style name="Listen.Theme.TextAppearance.ActionMode.Title" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
</resources>