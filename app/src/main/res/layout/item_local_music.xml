<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/listen.list.itemHeight"
        android:background="@color/listen.list.background"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/listen.margin.normal"
            android:layout_marginLeft="@dimen/listen.margin.large"
            android:layout_marginRight="@dimen/listen.margin.normal"
            android:layout_marginStart="@dimen/listen.margin.large"
            android:layout_toLeftOf="@+id/text_view_duration"
            android:layout_toStartOf="@+id/text_view_duration"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/text_view_name"
                style="@style/Listen.Theme.TextAppearance.List.Title"
                tools:text="A little bit longer"
                />

            <TextView
                android:id="@+id/text_view_artist"
                style="@style/Listen.Theme.TextAppearance.List.Hint"
                android:layout_marginTop="@dimen/listen.margin.small"
                tools:text="A little bit longer"
                />
        </LinearLayout>

        <!--<TextView-->
        <!--android:id="@+id/text_view_duration"-->
        <!--style="@style/Listen.Theme.TextAppearance.List.Hint"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginEnd="@dimen/listen.margin.large"-->
        <!--android:layout_marginRight="@dimen/listen.margin.large"-->
        <!--android:layout_marginTop="@dimen/listen.margin.normal"-->
        <!--tools:text="03:22"-->
        <!--/>-->

        <FrameLayout
            android:id="@+id/layout_action"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/listen.margin.large"
            android:paddingRight="@dimen/listen.margin.large"
            >

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/image_button_action"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_list_add"
                />
        </FrameLayout>
    </RelativeLayout>
</layout>
